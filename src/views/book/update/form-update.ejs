<form method="POST" class="mt-5" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
      <label for="inputTitle">Название</label>
      <input type="text" name="title" class="form-control" id="inputTitle" value="<%= book.title %>" required/>
      <label for="inputAuthors">Автор</label>
      <input type="text" name="authors" class="form-control" id="inputAuthors" value="<%= book.authors %>" required/>
    </div>
    <div class="form-check">
      <input
        type="checkbox"
        name="favorite"
       value="true"
        id="checkboxFavorite"
        class="form-check-input"
        <% if (book.favorite) { %>
            checked
        <% } %>
      />
      <label class="form-check-label" for="checkboxFavorite">В избранное </label>
    </div>
    <div class="form-group">
      <label for="inputDesc">Описание</label>
      <textarea
        rows="3"
        name="description"
        class="form-control"
        id="inputDesc"
      ><%= book.description %></textarea>
    </div>
  
    <div class="form-group text-right">
      <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    </div>
  </form>
  