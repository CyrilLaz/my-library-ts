<form method="POST" class="mt-5">
  <div class="form-group">
    <label for="inputTitle">Название</label>
    <input type="text" name="title" class="form-control" id="inputTitle" />
    <label for="inputAuthors">Автор</label>
    <input type="text" name="authors" class="form-control" id="inputAuthors" />
  </div>
  <div class="form-check">
    <input
      type="checkbox"
      name="favorite"
      value="true"
      id="checkboxFavorite"
      class="form-check-input"
    />
    <label class="form-check-label" for="checkboxFavorite">В избранное </label>
  </div>
  <div class="form-group">
    <label for="inputDesc">Описание</label>
    <textarea
      rows="3"
      name="description"
      class="form-control"
      id="inputDesc"
    ></textarea>
  </div>

  <div class="form-group text-right">
    <button type="submit" class="btn btn-primary">Сохранить</button>
  </div>
</form>
